{
  "compilerOptions": {
    "target": "ES2020" /** Specifies the flavour of the output code generated by transpiler */,
    //  https://www.typescriptlang.org/docs/handbook/esm-node.html
    "module": "CommonJS",
    /** when type: "module" is not specified in package.json, this has no effect
     */ "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "outDir": "./outDir",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
